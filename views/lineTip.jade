doctype html
html(lang="de")
    head
        link(rel="stylesheet", type="text/css", href="/css/style.css")
        link(rel="stylesheet", type="text/css", href="/css/normalize.css")
        meta(charset="UTF-8")
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title LineTip
        script(type='text/javascript', src='http://code.jquery.com/jquery.min.js')
        script(src='/js/utils.js')
        script(src='/js/stats.js')
        script(src='/js/lineDataSet.js')
        script(src='/js/fullscreen.js')
        style.
          //body{ background-color: ivory; }
    body
        .sd_header              
            h1 Line Detection
        input.button(type='button', value=' Start ', id='button' ,onclick='togglefullscreen()')
        h2
          | getroffen: 
          a#clicks 0
          |   und verfehlt: 
          a#fails 0    
        .drawcontainer
            canvas#myCanvas(width='1024', height='768', style='border:1px solid #d3d3d3;')
            //canvas#myCanvas(style='border:1px solid #d3d3d3;')
            //script.
                //zeichneGraph();            
            audio#goodaudio(src='sound/good.wav', autostart='false')
            audio#wrongaudio(src='sound/wrong.wav', autostart='false')
        h2
        | Versuche
        p#data
            form#eingabeForm 
                  | Bezeichnung: 
                  input#bezeichnung(value='test')
                  br
                  | Versuchsdauer: 
                  a#versuchsdauer
                  br
                  | Treffer: 
                  a#treffer
                  br
                  | Fehlversuche: 
                  a#fehlversuche
                  br
                  | Versuchszeitpunkt: 
                  a#versuchszeitpunkt
                  br
                  input.button(type='button', value=' Reset ', onclick='resetForm()')
                  input.button(type='button', value=' Hinzuf√ºgen ', onclick='addData()')
            h3
                Versuche
        #tab
        table#list(cellspacing='0px', cellpadding='20px', text-align='center')
             thead
             tr
                 td Bezeichnung
                 td Zeit
                 td Treffer
                 td Fehlversuch
                 td Action
             tbody
        p#lines