doctype html
html(lang="de")
    head
        link(rel="stylesheet", type="text/css", href="/css/style.css")
        link(rel="stylesheet", type="text/css", href="/css/normalize.css")
        meta(charset="UTF-8")
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title LineTip
        script(type='text/javascript', src='http://code.jquery.com/jquery.min.js')
        script(src='/js/utils.js')
        script(src='/js/stats.js')
        style.
          //body{ background-color: ivory; }
    body
        .sd_header              
            h1 Line Detection
        h2
          | getroffen: 
          a#clicks 0
          |   und verfehlt: 
          a#fails 0
        | 
        | Versuch: 
        input#versuch_id(type='text', value='')

            
        .drawcontainer
            canvas#myCanvas(width='1024', height='768', style='border:1px solid #d3d3d3;')
            //canvas#myCanvas(style='border:1px solid #d3d3d3;')
            script.
                zeichneGraph();            
            audio#goodaudio(src='sound/good.wav', autostart='false')
            audio#wrongaudio(src='sound/wrong.wav', autostart='false')
        h3 Versuche:
             #data
                form#eingabeForm
                  br
                  br 
                  | Bezeichnung
                  input#bezeichnung(name='bezeichnung', type='text')
                  br
                  br
                  | Zeit
                  input#zeit(name='zeit', type='text')
                  br
                  br
                  | Treffer:
                  input#treffer(name='treffer', type='text')
                  br
                  | Fehlversuch 
                  input#fehlversuch(name='fehlversuch', type='text')
                  br
                  br
                  input.button(type='button', value=' Reset ', onclick='ResetForm()')
                  input.button(type='button', value=' Add ', onclick='AddData()')
                  input.button(type='button', value=' Update ')
              h3 Versuche
              #tab
                table#list(cellspacing='0px', cellpadding='20px', text-align='center')
                  thead
                    tr
                      td Bezeichnung

                      td Zeit

                      td Treffer

                      td Fehlversuch

                      td Action
                    tbody
              
        h2 Statistik:
        p#lines